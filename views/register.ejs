<!DOCTYPE html>
<html lang= "en">

    <head>
        <meta charset="utf-8">
        <link rel="shortcut icon" href="./images/fav-icon.png" type="image/x-icon">
        <title>Register - <%= data.siteName %></title>

        <style>
            html{
                height: 100%;
                width: 100%;
            }
            body{
                height: 100%;
                width: 100%;
                background-color:slategray;

                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;

                font-family:Arial, Helvetica, sans-serif;
                font-size: 1.8em;
            }

            h1{
                font: inherit;
                color: yellow;
                font-weight: bold;
            }

            h2.error{
                display: grid;
                color: #d66060;
                background-color: black;
                padding: 3px;
                font-weight: lighter;
                font-size: 0.8em;
            }

            .fields{
                display: grid;
                color: yellow;
                font-weight: lighter;
                font-size: 0.8em;

                border: black solid 4px;
                background-color:rgb(91, 94, 94);
                padding: 1%;
                border-radius: 10px;
            }

            .fields input{
                border: 4px yellow solid;
                width: 250px;
                height: 30px;
                margin-bottom: 3vh;
                border-radius: 10px;
                padding-left: 10px;
                text-align: left;
            }

            .fields input:focus{
                border: 4px yellowgreen solid;
                outline: none;
            }

            #show-password{
                color: yellow;
                margin-left: 60px;
                border: none;
                width: auto;
                height: auto;
                border-radius: 0;
                background-color: transparent;
                justify-content: end;
            }
            #show-password:hover{
                color: yellowgreen;
            }

            .fields button{
                width: 150px;
                height: 35px;
                padding: 1px 2px;
                border: 4px yellow solid;
                margin: 0 auto;
                font: inherit;
                font-size: 20px;
                font-weight: lighter;
                float: right;

                background-color: white;
                border-radius: 10px;
            }
            .fields button:hover{
                border: 4px yellowgreen solid;
                color: yellowgreen;
            }
        </style>
    </head>

    <body>
        <h1>Register to <%= data.siteName %></h1>
        <% if (typeof formerror !== 'undefined' && formerror) { %>
            <h2 class="error"><%= formerror %></h2>
        <% } else{formerror = false}%>
        <form class="fields" method="post" action="/register/submit">
            <span>Username: </span>
            <input id="username" name="username" type="text" spellcheck="false" autocomplete="username" required <%if(formerror){%>value="<%=username%>"<%}%>>

            <span>Email Address: </span>
            <input id="email" name="email" type="email" spellcheck="false" autocomplete="email" required <%if(formerror){%>value="<%=email%>"<%}%>>

            <span>Password: <button type="button" id="show-password">show</button></span>
            <input id="password" name="password" type="password" autocomplete="current-password" required>
            <button type="submit">Register</button>
        </form>
    </body>

    <script>
        let passwordField = document.getElementById("password")
        let showPassword = document.getElementById("show-password");

        showPassword.addEventListener("click", function(){
            if(passwordField.type == "password"){
                passwordField.type = "text";
                showPassword.innerHTML = "&nbsp;hide";
            }
            else{
                passwordField.type = "password";
                showPassword.innerText = "show";
            }
        })
    </script>
</html>